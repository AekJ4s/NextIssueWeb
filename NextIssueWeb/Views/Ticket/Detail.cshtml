<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    /* ตั้งค่าพื้นหลัง */
    body {
        background-image: url('@Url.Content("~/images/background.jpg")');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        color: #fff; /* สีตัวอักษรหลัก */
    }

    /* การ์ดโปร่งใส */
    .card-transparent {
        background-color: rgba(0, 0, 0, 0.5); /* พื้นหลังโปร่งใส */
        border: none;
    }

    /* ปรับสไตล์ของ Input Fields */
    .form-control, .form-select {
        background-color: #ffffff; /* พื้นหลังสีขาว */
        color: #000000; /* ตัวอักษรสีดำ */
        border: 1px solid #ccc; /* ขอบสีเทาอ่อน */
    }

    .form-label {
        color: #fff; /* สีของป้ายกำกับ */
    }

    /* แกลเลอรีรูปภาพ */
    .image-gallery {
        max-height: 500px;
        overflow-y: auto;
    }

        .image-gallery img {
            cursor: pointer;
            transition: transform 0.2s;
            border: 2px solid #fff;
            border-radius: 5px;
        }

            .image-gallery img:hover {
                transform: scale(1.05);
            }

    /* สไตล์สำหรับ Modal */
    .modal-dialog {
        max-width: 90%; /* อนุญาตให้ Modal กว้างขึ้น */
        margin: 30px auto;
    }

    .modal-content {
        background-color: transparent;
        border: none;
    }

    .modal-body {
        padding: 0;
    }

    .modal-img {
        width: 100%;
        height: auto;
        transition: transform 0.3s;
    }

    .modal.show .modal-img {
        transform: scale(1.0); /* แสดงรูปภาพในขนาดเต็มเมื่อเปิด Modal */
    }

    /* สไตล์สำหรับปุ่ม Submit */
    .custom-submit-button {
        background-color: #28a745; /* พื้นหลังสีเขียว */
        border: none;
        color: white; /* ตัวอักษรสีขาว */
        padding: 15px 30px; /* ระยะห่างภายในปุ่ม */
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 18px;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.2s;
    }

        .custom-submit-button:hover {
            background-color: #218838; /* พื้นหลังสีเขียวเข้มเมื่อโฮเวอร์ */
            transform: scale(1.05); /* ขยายเล็กน้อยเมื่อโฮเวอร์ */
        }

        .custom-submit-button:active {
            background-color: #1e7e34; /* พื้นหลังสีเขียวเข้มกว่าเมื่อคลิก */
            transform: scale(0.98); /* ย่อเล็กน้อยเมื่อคลิก */
        }
</style>

@model Metadata.TicketWithProjectAndPicture
<form asp-action="UpdateTicket"
      asp-controller="Ticket"
      method="post">
    @Html.AntiForgeryToken()
    <div class="container mt-4">
        <!-- เริ่มต้นการ์ด -->
        <div class="card card-transparent">
            <div class="card-body">
                <!-- รายละเอียดโปรเจกต์และตั๋ว -->
                <div class="row mb-4">
                    <div class="col-12">
                        <label for="Project" class="form-label">Project Name</label>
                        <select class="form-select" asp-for="@Model.ProjectId">
                            @foreach (var record in Model.ProjectLst)
                            {
                                <option value="@record.Id"> @record.Name </option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label for="ProjectStatus" class="form-label">Project Status</label>
                        <select class="form-select" asp-for="@Model.StatusProjectId">
                            @foreach (var record in Model.StatusProjectLst)
                            {
                                <option value="@record.Id"> @record.Name </option>
                            }
                        </select>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-12">
                        <label for="TicketName" class="form-label">Ticket Name</label>
                        <input class="form-control" id="TicketName" asp-for="@Model.Issue.Name" />
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label for="TicketStatus" class="form-label">Ticket Status</label>
                        <select class="form-select" asp-for="@Model.StatusTicketId">
                            @foreach (var record in Model.StatusTicketLst)
                            {
                                <option value="@record.Id"> @record.Name </option>
                            }
                        </select>
                    </div>
                </div>

                <!-- แกลเลอรีรูปภาพ -->
                <div class="row mt-3 image-gallery">
                    @foreach (var image in Model.Files)
                    {
                        <div class="col-md-3 mb-3">
                            <img src="@image" alt="Image" class="img-fluid" />
                        </div>
                    }
                </div>

                <!-- ปุ่ม Submit -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg custom-submit-button">
                        Update
                    </button>
                </div>
            </div>
        </div>
        <!-- สิ้นสุดการ์ด -->
    </div>
</form>

<!-- Modal สำหรับแสดงรูปขยาย -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <img src="" class="modal-img img-fluid" alt="Enlarged Image">
            </div>
        </div>
    </div>
</div>

<!-- JavaScript -->
<script>
    $(document).ready(function () {
        $('.image-gallery img').on('click', function () {
            var src = $(this).attr('src'); // ดึงค่า src จากรูปภาพที่ถูกคลิก
            $('#imageModal').modal('show'); // แสดง Modal
            $('#imageModal .modal-img').attr('src', src); // ตั้งค่า src ของรูปภาพใน Modal
        });
    });
</script>
